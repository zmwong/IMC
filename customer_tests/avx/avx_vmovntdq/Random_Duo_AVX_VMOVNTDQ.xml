<!-- <ExpectedValue>OK</ExpectedValue> -->

<IntelligentMemoryChecker>

	<!--IMC flows queue configuration-->

	<IMC_configuration>
		<flow>burster_flow_1</flow>
		<iterations>300</iterations>
	</IMC_configuration>

	<!--Flows configuration-->

	<burster_flow_1>
		<flow_type>BURSTER</flow_type>
		<iterations>16</iterations>
		<data_bursts>2</data_bursts>
		<address_algorithm>fast_random_address_algorithm</address_algorithm>
		<data_algorithm>glfsr_data</data_algorithm>
		<opcode>AVX_VMOVNTDQ</opcode>
		<memory_block>memory_block_1</memory_block>
		<same_address>false</same_address>
		<alignment>32</alignment>
	</burster_flow_1>

	<!--Algorithms configuration-->

	<fast_random_address_algorithm>
		<algorithm_type>FAST_RANDOM</algorithm_type>
		<pattern_count>20</pattern_count>
	</fast_random_address_algorithm>

	<glfsr_data>
		<algorithm_type>GLFSR</algorithm_type>
		<seed>0x564a95bd9640</seed>
	</glfsr_data>

	<!--Memory blocks configuration-->

	<memory_block_1>
		<memory_block_type>MALLOC</memory_block_type>
		<size_in_bytes>4096</size_in_bytes>
	</memory_block_1>

</IntelligentMemoryChecker>
